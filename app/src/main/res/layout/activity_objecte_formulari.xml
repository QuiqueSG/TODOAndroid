<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">

        <!--DADES DE L'OBJECTE-->

        <LinearLayout
            android:id="@+id/DADES"
            android:layout_width="411dp"
            android:layout_height="256dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Titol"
                android:layout_width="431dp"
                android:layout_height="wrap_content"
                android:text="Entra les dades del objecte"
                android:textSize="10pt"></TextView>

            <EditText
                android:id="@+id/ValorNomObjecte"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Nom de l'objecte"
                android:inputType="textPersonName"></EditText>

            <EditText
                android:id="@+id/ValorDesObjecte"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="DescripciÃ³ de l'objecte"
                android:inputType="textMultiLine"
                android:lines="5"></EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/IMATGE"
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Dades imatge"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BuscarImatge"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:onClick="escollirImatge"
                    android:text="Escollir imatge" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content"
                    android:hint=" Indica el nom de la imatge" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ImatgeObjecte"
                android:layout_width="293dp"
                android:layout_height="121dp"
                android:layout_weight="1" />
        </LinearLayout>


        <!-- PUJAR IMATGE DE L'OBJECTE -->

        <Button
            android:id="@+id/GUARDAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUARDAR" />



    </LinearLayout>
</ScrollView>


